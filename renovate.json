{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "docker-compose": {
    "fileMatch": ["^.*\\.ya?ml$"]
  },
  "packageRules": [
    {
      "matchManagers": ["docker-compose"],
      "matchPackageNames": ["lscr.io/linuxserver/calibre-web", "lscr.io/linuxserver/overseerr", "lscr.io/linuxserver/tautulli"],
      "allowedVersions": "<2000"
    },
    {
      "matchManagers": ["docker-compose"],
      "matchPackageNames": ["lscr.io/linuxserver/qbittorrent"],
      "allowedVersions": "<20"
    }
  ]
}
